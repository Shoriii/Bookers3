<div class="form-body">
<p id="notice"></p>
  <div class="row">
  <div class="col-md6 col-md-offset-3">
    <% if @user.errors.any? %>
<div id="error_explanation">
<ul>
<p><%= @user.errors.count %>errors prohibited this obj from being saved:</p>
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<% end %>

<h2>User info</h2>
<!-- form_for部分 -->
<%= form_for(@user) do |f| %>

    <h4>Name</h4>
    <%= f.text_field :name %>
    <h4>Image</h4>
    <%= f.attachment_field :profile_image %>
    <h4>Introduction</h4>
    <%= f.text_area :introduction %>
    <h4><%= f.submit 'Update User' %></h4>
<% end %>


</div>
</div>







</div>