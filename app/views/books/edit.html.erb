<div class="container">
  <p id="notice"></p>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
     <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
     </ul>
<% end %>

    <h4>Title</h4>
    <%= f.text_field :title,class:'col-xs-12' %>
    <h4>Body</h4>
    <%= f.text_area :body,class:'col-xs-12' %>
    <h4><%= f.submit 'Update Book',class:"btn btn-primary col-xs-12" %></h4>
<% end %>

<%= link_to 'Show', book_path %> |
<%= link_to 'Back', books_path %>
</div>
</div>
</div>